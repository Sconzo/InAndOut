@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses Control</h2>

        </div>
        <div class="col-6" text-right>
            <a class="btn btn-primary" asp-controller="Expenses" asp-action="Create">Add new Expense</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="35%"> @expense.ExpenseName</td>
                        <td width="35%"> @expense.Amount</td>
                        <td width="20%">
                            <div class="w-100 btn-group" role="group">
                                <a class="btn btn-primary mx-1" asp-route-Id="@expense.Id" asp-controller="Expenses" asp-action="Update">Update</a>
                                <a class="btn btn-danger mx-1" asp-route-Id="@expense.Id" asp-controller="Expenses" asp-action="Delete">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No expenses yet</p>
    }

</div>

